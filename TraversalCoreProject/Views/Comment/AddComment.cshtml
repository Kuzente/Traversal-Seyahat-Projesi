@model Destination
<div class="leave-comment-form mt-5" id="reply">
    <h4 class="side-title mb-2">Yorum Bırakın</h4>
    <p class="mb-4">
        Lütfen Yorum Bırakın ve Gerekli Alanları Doldurun *
    </p>
    <form asp-action="AddComment" asp-controller="Comment" method="post">

        <div class="form-group">
            <textarea name="CommentContent" class="form-control" placeholder="Yorumunuz*" required=""
                      spellcheck="false"></textarea>
        </div>
        <div class="input-grids row">

            <div class="form-group col-lg-6">
                <input type="text" name="CommentUser" class="form-control" placeholder="İsminiz*"
                       required="">
            </div>
            <div class="form-group col-lg-6">
                <input type="hidden" value="@Model.ID" name="DestinationID" class="form-control" placeholder="DestinationID*" required="">
            </div>
        </div>

        <div class="submit text-right">
            <button class="btn btn-style btn-primary">Yorum Yap </button>
        </div>
    </form>
</div>