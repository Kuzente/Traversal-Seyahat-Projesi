@model List<Guide>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Rehberlerimiz</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Görsel</th>
        <th>Ad Soyad</th>
        <th>Açıklama</th>
        <th>Durum</th>
        <th>Detaylar</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td><img class="rounded-circle" src="@item.Image" height="50" width="50" /></td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            @if (item.Status == true)
            {
                <td><a href="/Admin/Guide/ChangeToFalse/@item.ID" class="btn btn-outline-warning">Pasif Yap</a></td>
            }
            else
            {
                <td><a href="/Admin/Guide/ChangeToTrue/@item.ID" class="btn btn-outline-info">Aktif Yap</a></td>
            }
            <td><a href="/Admin/Guide/UpdateGuide/@item.ID" class="btn btn-outline-success">Düzenle</a></td>
            <td><a href="/Admin/Guide/DeleteGuide/@item.ID" class="btn btn-outline-danger">Sil</a></td>
        </tr>
    }
</table>
<a href="/Admin/Guide/AddGuide" class="btn btn-primary"> Yeni Rehber Girişi</a>

