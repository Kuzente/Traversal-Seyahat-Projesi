@model Guide
@{
    ViewData["Title"] = "UpdateGuide";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Rehber Düzenle</h1>
<form method="post">
    <div class="form-group">
        @Html.Label("Ad Soyad")
        <input class="form-control" type="text" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        @Html.Label("Açıklama")
        <input class="form-control" type="text" asp-for="Description" />
        <span asp-validation-for="Description" class="text-danger"></span>

    </div>
    <div class="form-group">
        @Html.Label("Görsel")
        <input class="form-control" type="text" asp-for="Image" />
        <span asp-validation-for="Image" class="text-danger"></span>

    </div>
    <div class="form-group">
        @Html.Label("Twitter Url")
        <input class="form-control" type="text" asp-for="TwitterUrl" />
    </div>
    <div class="form-group">
        @Html.Label("Instagram Url")
        <input class="form-control" type="text" asp-for="InstagramUrl" />
    </div>
    <br />
    <button class="btn btn-outline-success">Rehber Güncelle</button>
</form>

