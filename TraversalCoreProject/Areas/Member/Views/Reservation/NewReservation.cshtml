@model Reservation
@{
    ViewData["Title"] = "NewReservation";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1>Yeni Rezervasyon Sayfası</h1>
<form method="post">
  <div class="form-group">
        @Html.Label("Lokasyon")
        @Html.DropDownListFor(x => x.Destination , (List<SelectListItem>)ViewBag.v ,new {@class = "form-control"})
  </div>
    <div class="form-group">
        @Html.Label("Kişi Sayısı")
        <input class="form-control" type="text" asp-for="PersonCount" />
    </div>
    <div class="form-group">
        @Html.Label("Tarih")
        <input class="form-control" type="date" asp-for="ReservationDate" />
    </div>
    <div class="form-group">
        @Html.Label("Varsa Eklemek İstedikleriniz")
        <input class="form-control" type="text" asp-for="Description" />
    </div>
    <button class="btn btn-outline-success">Rezervasyon Yap</button>
</form>

